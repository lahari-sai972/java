import java.util.*;
class Reverse
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("enter n value:");
        int n=sc.nextInt();
	int a;
	int rev = 0;
        while(n>0)
        {
            a=n%10;
            rev=rev*10+a;
            n=n/10;

        }
        System.out.println("reverse of a number:"+rev);
    }
}
